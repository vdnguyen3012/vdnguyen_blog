<div class="row">
  <div class="col-sm-12">
      <div class="card">
        <div class="card-block">
          <h4 class="card-title"><%= link_to article.title, article_path(article) %></h4>
          <p class="card-text"><%= @markdown.render(article.body).html_safe %></p>
        </div>
        <div class="card-footer">
          <%= link_to 'Edit', edit_article_path(article), class: 'btn btn-warning' %>
          <%= link_to 'Delete', article_path(article), class: "btn btn-danger", method: 'delete', data: { confirm: 'Are you sure ?'} %>
          <p class="pull-xs-right"><%= "#{article.views} Views" if article.views %></p>
        </div>
      </div>
  </div>
</div>