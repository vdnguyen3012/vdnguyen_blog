<div class="container m-t-1">
  <h1>VD's Blog</h1>
  <h3>My first Rails Application for CoderSchool!!!</h3>
  <nav class="navbar navbar-light bg-faded m-b-1">
	  <ul class="nav navbar-nav">
	    <li class="nav-item">
	      <a class="nav-link" href="/">Home</a>
	    </li>
	    <li class="nav-item active">
	      <a class="nav-link" href="/articles">Articles</a>
	    </li>
	  </ul>
	  <%= form_tag(articles_path, :method => "get", class: "form-inline pull-xs-right") do %>
	    <%= text_field_tag :q, params[:q], class: "form-control", placeholder: "Search Articles" %>
	    <%= submit_tag "Search", class: "btn btn-success-outline" %>
	  <% end %>
	</nav>

	<% if notice %><div class="alert alert-success"><%= notice %></div><% end %>
	<%= link_to 'New Article', new_article_path, class: "btn btn-primary m-b-1" %>
  <%= render @articles %>  

</div>